+ |- ((((orthogonal_transformation f) /\ (orthogonal_transformation g)) ==> (orthogonal_transformation (f o g))) = ((((linear f) /\ (!v. (!w. (((dot (f v)) (f w)) = ((dot v) w))))) /\ ((linear g) /\ (!v. (!w. (((dot (g v)) (g w)) = ((dot v) w)))))) ==> T))
T c= c==> c/\ corthogonal_transformation f0 corthogonal_transformation f1 corthogonal_transformation * * part co f0 f1 c==> c/\ c/\ clinear f0 ! ! c= cdot * f0 b0 * f0 b1 cdot b0 b1 c/\ clinear f1 ! ! c= cdot * f1 b0 * f1 b1 cdot b0 b1 cT
+ |- (T = (!f. (!g. (((orthogonal_transformation f) /\ (orthogonal_transformation g)) ==> (orthogonal_transformation (f o g))))))
T c= cT ! ! c==> c/\ corthogonal_transformation b0 corthogonal_transformation b1 corthogonal_transformation * * part co b0 b1
- |- ((t ==> t) = T)
