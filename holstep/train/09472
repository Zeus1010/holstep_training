N LINEAR_REFLECT_ALONG
C |- (!v. (linear (reflect_along v)))
T clinear * part creflect_along f0
D TRUTH
A |- T
T cT
D linear
A |- (!f. ((linear f) = ((!x. (!y. ((f ((vector_add x) y)) = ((vector_add (f x)) (f y))))) /\ (!c. (!x. ((f ((% c) x)) = ((% c) (f x))))))))
T c= clinear f0 c/\ ! ! c= * f0 cvector_add b0 b1 cvector_add * f0 b0 * f0 b1 ! ! c= * f0 c% b0 b1 c% b0 * f0 b1
D REFLECT_ALONG_ADD
A |- (!v. (!x. (!y. (((reflect_along v) ((vector_add x) y)) = ((vector_add ((reflect_along v) x)) ((reflect_along v) y))))))
T c= creflect_along f0 cvector_add f1 f2 cvector_add creflect_along f0 f1 creflect_along f0 f2
D REFLECT_ALONG_MUL
A |- (!v. (!a. (!x. (((reflect_along v) ((% a) x)) = ((% a) ((reflect_along v) x))))))
T c= creflect_along f0 c% f1 f2 c% f1 creflect_along f0 f2
+ |- (((!a. (!x. (((reflect_along v) ((% a) x)) = ((% a) ((reflect_along v) x))))) ==> ((\a. (!x. (((reflect_along v) ((% a) x)) = ((% a) ((reflect_along v) x))))) a)) = ((\a. (!x. (((reflect_along v) ((% a) x)) = ((% a) ((reflect_along v) x))))) a))
T c= c==> ! ! c= creflect_along f0 c% b0 b1 c% b0 creflect_along f0 b1 * / ! c= creflect_along f0 c% b0 b1 c% b0 creflect_along f0 b1 f1 * / ! c= creflect_along f0 c% b0 b1 c% b0 creflect_along f0 b1 f1
- |- ((t /\ t) = t)
T c= c/\ f0 f0 f0
